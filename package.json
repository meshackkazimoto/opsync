{
  "name": "opsync",
  "version": "0.0.1",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:migrate": "bun run --filter @opsync/db migrate",
    "db:seed": "bun run --filter @opsync/db seed"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "pino-pretty": "^13.1.3"
  }
}
